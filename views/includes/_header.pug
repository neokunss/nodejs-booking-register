section.container
	//- header.app-header(style="background-color: transparent;")
	header.app-header
		if env === 'development' && isAdmin
			a.app-header__logo(href='/') Booking Admin

			// Sidebar toggle button
			a.app-sidebar__toggle(href='#', data-toggle='sidebar', aria-label="Hide Sidebar")


		if userSession
			ul.app-nav
				// User Menu
				li.dropdown
					a.app-nav__item(href='#', data-toggle='dropdown' aria-label="Open Profile Menu")
						i.fa.fa-user.fa-lg
					ul.dropdown-menu.settings-menu.dropdown-menu-right
						li
							a.dropdown-item(href=`/user/password/`+user.id)
								i.fa.fa-user.fa-lock
								|  Reset password
						li
							a.dropdown-item(href=`/user/logout/`+user.id)
								i.fa.fa-sign-out.fa-lg
								|  Logout
