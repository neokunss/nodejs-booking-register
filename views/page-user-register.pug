            //-         strong Date of Birth
            //-     .colinputxxx
            //-         input#dob.form-control(type="date" name="dob" value="")
            .form-group
                .colinputxxx.col-md-offset-3
                    .checkbox
                        label
                            input#terms(type="checkbox" value="yes" name="terms")
