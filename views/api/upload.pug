extends ../layouts/_layout

block variables
    - var activePage = 'basic-api'
    - var activeGroup = 'API'
    - var i = 1
    - var theprice = process.env.PRODUCT_PRICE;

block title
    title #{title} | Danish - Thai Gala

block content
  //- section.material-half-bg
  //-     .cover
  //-     include ../includes/_errorMessage.pug
  section.container
    .pb-2.mt-2.mb-4.border-bottom
        h2
            i.fa.fa-upload(aria-hidden='true')
            |  File Upload

    .btn-group.d-flex(role='group')
        a.btn.btn-success(href='https://github.com/expressjs/multer', target='_blank').w-100
            i.fa.fa-book(aria-hidden='true')
            |  Multer Documentation
        a.btn.btn-success(href='http://codepen.io/search/pens?q=custom+file+upload&limit=all&type=type-pens', target='_blank').w-100
            i.fa.fa-laptop(aria-hidden='true')
            |  Customize File Upload

    h3 File Upload Form
    .row
        .col-md-6
            p All files will be uploaded to "/uploads" directory.
            form(role='form', enctype='multipart/form-data', method='POST')
                .form-group
                    label.col-form-label.font-weight-bold File Input
                    .col-md-6
                        input(type='file', name='myFile')
                button.btn.btn-primary(type='submit') Submit
